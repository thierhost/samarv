{% extends "DoctolibMedecinBundle::layout.html.twig" %}
{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="page-header text-info text-center">
                <h1>Editer mon profile <i class="material-icons">tag_faces</i></h1>
            </div>
            <div class="col-md-offset-3 col-md-6">
                <div class="panel panel-info">
                    <div class="panel-body">
                        {{ form_start(form,{'attr': {'id': 'form1'}}) }}

                        <div class="form-group">
                            <label for="inputText" class="col-md-2 control-label">Prenom</label>
                            <div class="col-md-10">
                                {{ form_widget(form.user.prenom, {'attr': {'class': 'form-control','placeholder':'Prenom'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputText" class="col-md-2 control-label">Nom</label>
                            <div class="col-md-10">
                                {{ form_widget(form.user.nom, {'attr': {'class': 'form-control','placeholder':'Nom'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputText" class="col-md-2 control-label">Spécialité</label>
                            <div class="col-md-10">
                                {{ form_widget(form.specialite, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail" class="col-md-2 control-label">Email</label>
                            <div class="col-md-10">
                                {{ form_widget(form.user.username, {'attr': {'class': 'form-control','placeholder':'Email'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword" class="col-md-2 control-label">Mot de passe</label>
                            <div class="col-md-10">
                                {{ form_widget(form.user.password, {'attr': {'class': 'form-control','placeholder':'Password'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword" class="col-md-2 control-label">N° Téléphone</label>
                            <div class="col-md-10">
                                {{ form_widget(form.user.numTel, {'attr': {'class': 'form-control','placeholder':'N° Téléphone'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword" class="col-md-2 control-label">Adresse</label>
                            <div class="col-md-10">
                                {{ form_widget(form.user.adresse, {'attr': {'class': 'form-control','placeholder':'Adresse'}}) }}
                            </div>
                        </div>

                        {{ form_end(form) }}
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-3">
                                <button class="btn btn-success btn-lg" form="form1"> Valider</button>
                            </div>
                            <div class="col-md-3">
                                <a  href="{{ path('medecin_parametre') }}" class=" btn btn-danger btn-lg">Annuler </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
