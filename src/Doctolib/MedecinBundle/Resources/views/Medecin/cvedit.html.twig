{% extends "DoctolibMedecinBundle::layout.html.twig" %}
{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="page-header text-info text-center">
                <h1>Editer votre cv <i class="material-icons">tag_faces</i></h1>
            </div>
            <div class="col-md-offset-3 col-md-6">
                <div class="panel panel-info">
                    <div class="panel-body">
                        {{ form_start(form,{'attr': {'id': 'form1'}}) }}

                        <div class="form-group">
                            <div class="col-md-12">
                                {{ form_widget(form.cv, {'attr': {'class': 'form-control','placeholder':'CV'}}) }}
                            </div>
                        </div>

                        {{ form_end(form) }}
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-3">
                                <button class="btn btn-success btn-lg" form="form1"> Valider</button>
                            </div>
                            <div class="col-md-3">
                                <a  href="{{ path('medecin_parametre') }}" class=" btn btn-danger btn-lg">Annuler </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('public/js/tinymce/jquery.tinymce.min.js') }}"></script>
    <script src="{{asset('public/js/tinymce/tinymce.min.js') }}"></script>
    <script>
        tinymce.init({
            selector: '#medecin_cv_edit_cv'
        });
    </script>
{% endblock %}